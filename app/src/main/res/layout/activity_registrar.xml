<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_registro"
    tools:context=".registrarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#3F51B5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:textAlignment="center"
            android:textSize="26pt" />

        <EditText
            android:id="@+id/etCorreonuevo"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginTop="10pt"
            android:hint="email@gmail.com"
            android:textAlignment="center"
            android:background="@drawable/style_borde"/>

        <EditText
            android:id="@+id/etClavenuevo"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="10pt"
            android:hint="email@gmail.com"
            android:textAlignment="center"
            android:background="@drawable/style_borde"/>

        <Button
            android:id="@+id/btnRegistrarnuevo"
            android:layout_width="184dp"
            android:layout_height="63dp"
            android:text="Registrarse"
            android:backgroundTint="@color/color2"/>

        <Button
            android:id="@+id/btnRegresarnuevo"
            android:layout_width="177dp"
            android:layout_height="60dp"
            android:layout_marginTop="5pt"
            android:text="Regresar"
            android:backgroundTint="@color/color3"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>