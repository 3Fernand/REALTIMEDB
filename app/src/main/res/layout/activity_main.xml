<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_login"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3F51B5"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="BIENVENIDO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginTop="10pt"
            android:background="@drawable/style_borde"
            android:hint="correo"
            android:inputType="textEmailAddress"
            android:paddingVertical="5px"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/etClave"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:background="@drawable/style_borde"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingVertical="5px"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


        <Spinner
            android:id="@+id/spPerfil"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="100pt"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5pt"
            android:backgroundTint="@color/borde1"
            android:padding="4pt"
            android:text="Iniciar Session" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="100pt"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            android:padding="4pt"
            android:text="Registrarse" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>